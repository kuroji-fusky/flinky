---
import { MenuIcon, ChevronDownIcon, Settings2Icon, SearchIcon } from "../icons";
import BrowseMenu from "./BrowseMenu.astro";
---

<script>
  const browseBtn = document.getElementById("browse") as HTMLButtonElement;
  const exploreBtn = document.getElementById("explore") as HTMLButtonElement;

</script>

<nav class="fixed top-0 inset-x-0 z-[100] bg-white dark:bg-black">
  <div class="h-[calc(var(--navbar-size)*1)] px-6 flex items-center gap-x-3.5 w-full mx-auto max-w-screen-xl">
    <button class="px-2 py-2 rounded-md cursor-pointer block lg:hidden">
      <MenuIcon />
    </button>
    <a href="/">Flinky</a>
    <span class="h-4 border-l opacity-40"></span>
    <div class="inline-flex gap-x-1">
      <button
        id="browse"
        aria-expanded="false"
        class="group px-2 py-1.5 rounded-md cursor-pointer hidden lg:inline-flex items-center gap-x-1"
      >
        <span>Browse</span>
        <ChevronDownIcon width="1em" height="1em" class="opacity-65 group-hover:translate-y-0.5 group-hover:opacity-100" />
      </button>
      <button
        id="explore"
        class="group px-2 py-1.5 rounded-md cursor-pointer hidden lg:inline-flex items-center gap-x-1"
      >
        <span>Explore</span>
        <ChevronDownIcon width="1em" height="1em" class="opacity-65 group-hover:translate-y-0.5 group-hover:opacity-100" />
      </button>
      <button
        id="search"
        aria-expanded="false"
        class="px-2.5 py-1.5 bg-blue-600/20 hover:bg-blue-600/60 rounded-md cursor-pointer inline-flex items-center gap-x-1"
      >
        <SearchIcon class="opacity-65" />
        <span>Search</span>
      </button>
    </div>

    <div class="flex-1"></div>

    <!-- <div class="relative flex-1">
      <span
        class="absolute left-2.5 inset-y-0 opacity-50 pointer-events-none flex items-center"
      >
        <SearchIcon width="1.2em" height="1.2em" />
      </span>
      <input
        id="global-search"
        class="pl-8 py-1 max-w-60 w-full dark:bg-neutral-900/40 dark:border-neutral-600/60 rounded-md placeholder:text-sm"
        role="searchbox"
        type="text"
        placeholder="Search"
        autocomplete="off"
        spellcheck="false"
      />
    </div> -->
    <div class="flex gap-x-1">
      <a href="/requests" class="px-3 py-1.5 border rounded-md cursor-pointer"
        >Request</a
      >
      <button
        class="px-2 py-2 border rounded-md cursor-pointer"
        aria-label="Site options and accessibility settings"
      >
        <Settings2Icon />
      </button>
    </div>
  </div>
  <div id="flexible-container" class="relative">
    <!-- <BrowseMenu/> -->
  </div>
</nav>